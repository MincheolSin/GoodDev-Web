<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.good.gooddev_web.board.dao.BoardDAO">

	<select id="getTotalCategory" resultType="int">
		SELECT CLASS_NO FROM
		GOOD_MEMBERCLASS
	</select>

	<select id="getList"
		resultType="io.good.gooddev_web.board.vo.BoardVO">
		SELECT *
		FROM (
		SELECT good_board.*, ROW_NUMBER() OVER (ORDER BY bno DESC) AS rnum
		FROM good_board
		)
		WHERE rnum &gt; #{skip}
		AND rnum &lt;= #{skip} + #{size}
	</select>

	<select id="getTotalCount" resultType="int">
		select count(*) from
		good_board
	</select>
</mapper>